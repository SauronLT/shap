@using Fashion.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model Mal
<div class="container-fluid pt-5 px-4 mt-5">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6 offset-xl-6">
            <!-- Mərkəzdən sağa sürüşdü -->
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4 text-end">Basic Form</h6>

                <form asp-area="admin" asp-controller="Mal" asp-action="Create" method="Post" class="text-end" style="margin-top: 100px; direction: rtl;">
                    

                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">ImageUrl</label>
                        <input asp-for="ImageUrl" class="form-control text-end" id="exampleInputPassword1">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control text-end" id="exampleInputPassword1">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Price</label>
                        <input asp-for="Price" class="form-control text-end" id="exampleInputPassword1">
                    </div>


                    <button type="submit" class="btn btn-primary">Create</button>
                </form>

            </div>
        </div>
    </div>
</div>